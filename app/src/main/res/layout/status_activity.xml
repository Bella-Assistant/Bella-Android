<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3e50">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:title="Status">

    </android.support.v7.widget.Toolbar>

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="ToggleButton"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="@drawable/btn_toggle" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="ToggleButton"
        android:layout_below="@+id/toggleButton2"
        android:layout_alignStart="@+id/toggleButton2"
        android:padding="20dp"
        android:background="@drawable/btn_toggle"
        android:layout_centerHorizontal="true"/>

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="ToggleButton"
        android:layout_below="@+id/toggleButton3"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="@drawable/btn_toggle"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"
        android:paddingBottom="20dp"
        android:text="Light 1"
        android:textAlignment="center"
        android:textColor="#CFD8DC"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toggleButton4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:paddingBottom="20dp"
        android:text="Light 2"
        android:textAlignment="center"
        android:textColor="#CFD8DC"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toggleButton4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:paddingBottom="20dp"
        android:text="Sprinkler"
        android:textAlignment="center"
        android:textColor="#CFD8DC"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>