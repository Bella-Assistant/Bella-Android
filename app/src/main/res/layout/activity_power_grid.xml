<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context="com.example.android.Bella.PowergridActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:title="PowerGrid Status">

    </android.support.v7.widget.Toolbar>

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:iconPadding="18dp"
        app:iconSize="22dp"
        app:rightIcon="@drawable/ic_action_off"
        app:rightText="OFF"
        app:leftIcon="@drawable/ic_action_on"
        app:leftText="ON"
        app:selectedTextSize="14sp"
        app:textSize="12sp"
        android:id="@+id/toggleButton2"
        app:sliderBackgroundColor="@color/colorPrimaryDark"
        app:switchColor="@color/green"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp" />

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:iconPadding="18dp"
        app:iconSize="22dp"
        app:rightIcon="@drawable/ic_action_off"
        app:rightText="OFF"
        app:leftIcon="@drawable/ic_action_on"
        app:leftText="ON"
        app:selectedTextSize="14sp"
        app:textSize="12sp"
        android:id="@+id/toggleButton3"
        app:sliderBackgroundColor="@color/colorPrimaryDark"
        app:switchColor="@color/green"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="50dp" />

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:iconPadding="18dp"
        app:iconSize="22dp"
        app:rightIcon="@drawable/ic_action_off"
        app:rightText="OFF"
        app:leftIcon="@drawable/ic_action_on"
        app:leftText="ON"
        app:selectedTextSize="14sp"
        app:textSize="12sp"
        android:id="@+id/toggleButton4"
        app:sliderBackgroundColor="@color/colorPrimaryDark"
        app:switchColor="@color/green"
        android:layout_below="@+id/toggleButton2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="50dp" />

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:iconPadding="18dp"
        app:iconSize="22dp"
        app:rightIcon="@drawable/ic_action_off"
        app:rightText="OFF"
        app:leftIcon="@drawable/ic_action_on"
        app:leftText="ON"
        app:selectedTextSize="14sp"
        app:textSize="12sp"
        android:id="@+id/toggleButton5"
        app:sliderBackgroundColor="@color/colorPrimaryDark"
        app:switchColor="@color/green"
        android:layout_below="@+id/toggleButton3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="50dp" />

</RelativeLayout>
