<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3e50">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:title="@string/setting_settings">

    </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Release"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#CFD8DC"
                android:layout_below="@+id/toolbar"/>

            <TextView
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="beta"
                android:textSize="15sp"
                android:layout_below="@+id/release"
                android:textColor="#B0BEC5" />

            <TextView
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/version_settings"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@+id/rel"
                android:textColor="#CFD8DC" />

            <TextView
                android:id="@+id/ver_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="@string/version"
                android:textSize="15sp"
                android:layout_below="@+id/version"
                android:textColor="#B0BEC5" />

            <TextView
                android:id="@+id/language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Locale"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@+id/ver_num"
                android:textColor="#CFD8DC" />

            <TextView
                android:id="@+id/lang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="en-US"
                android:textSize="15sp"
                android:layout_below="@+id/language"
                android:textColor="#B0BEC5" />

            <TextView
                android:id="@+id/License"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="License"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@+id/lang"
                android:textColor="#CFD8DC" />

            <TextView
                android:id="@+id/gpl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="GPLv3"
                android:textSize="15sp"
                android:layout_below="@+id/License"
                android:textColor="#B0BEC5" />

            <TextView
                android:id="@+id/Source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Source"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@+id/gpl"
                android:textColor="#CFD8DC" />

            <TextView
                android:id="@+id/Link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="https://github.com/ujwalp15/Bella"
                android:textSize="15sp"
                android:layout_below="@+id/Source"
                android:textColor="#B0BEC5" />


</RelativeLayout>
