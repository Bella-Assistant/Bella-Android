<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.Bella.MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#3F51B5">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/somanath"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignStart="@+id/imageView7" />

    <TextView
        android:text="ABOUT US"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="normal"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="The AI Devs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ujwal"
        android:id="@+id/imageView4"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ashish"
        android:id="@+id/imageView7"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="The Hardware Devs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:id="@+id/textView9"
        android:textAlignment="center"
        android:layout_above="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/akash"
        android:id="@+id/imageView5"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/imageView4" />

    <TextView
        android:text="Sai Somanath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="Ashish Raman Nayak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_above="@+id/imageView5"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="Akash James"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:layout_toStartOf="@+id/textView9"
        android:layout_alignEnd="@+id/imageView5"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="Ujwal P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed" />


</RelativeLayout>
