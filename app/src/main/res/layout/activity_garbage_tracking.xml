<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.Bella.GarbageTracking">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="This is backgound image"
        android:scaleType="fitXY"
        android:src="@drawable/grid" />

    <ImageView
        android:id="@+id/truck"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:contentDescription="This is the truck" />

    <ImageView
        android:id="@+id/bin1"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:contentDescription="bin1"
        android:layout_below="@+id/truck"
        android:layout_toEndOf="@+id/truck"
        android:layout_marginStart="138dp"
        android:layout_marginTop="12dp" />
    <ImageView
        android:id="@+id/bin2"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:contentDescription="bin2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="168dp" />

    <ImageView
        android:id="@+id/bin3"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:contentDescription="bin3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
