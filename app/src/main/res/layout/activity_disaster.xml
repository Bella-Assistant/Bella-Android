<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.Bella.DisasterActivity"
    android:background="@color/background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:title="Disaster Status">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollview"
        android:layout_marginTop="?attr/actionBarSize">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <io.ghyeok.stickyswitch.widget.StickySwitch
                android:layout_width="160dp"
                android:layout_height="100dp"
                app:iconPadding="18dp"
                app:iconSize="22dp"
                app:rightIcon="@drawable/ic_action_warningg"
                app:rightText="YES"
                app:leftIcon="@drawable/ic_action_save"
                app:leftText="NO"
                app:selectedTextSize="14sp"
                app:textSize="12sp"
                android:id="@+id/toggleButton2"
                android:layout_marginTop="90dp"
                android:layout_centerHorizontal="true"
                app:sliderBackgroundColor="@color/colorPrimaryDark"
                app:switchColor="@color/green"/>

            <io.ghyeok.stickyswitch.widget.StickySwitch
                android:id="@+id/toggleButton3"
                android:layout_width="160dp"
                android:layout_height="100dp"
                app:iconPadding="18dp"
                app:iconSize="22dp"
                app:leftIcon="@drawable/ic_action_save"
                app:leftText="NO"
                app:rightIcon="@drawable/ic_action_warningg"
                app:rightText="YES"
                app:selectedTextSize="14sp"
                app:textSize="12sp"
                android:layout_marginTop="110dp"
                android:layout_below="@+id/toggleButton2"
                android:layout_alignStart="@+id/toggleButton2"
                android:padding="20dp"
                android:layout_centerHorizontal="true"
                app:sliderBackgroundColor="@color/colorPrimaryDark"
                app:switchColor="@color/green"/>

            <io.ghyeok.stickyswitch.widget.StickySwitch
                android:id="@+id/toggleButton4"
                android:layout_width="160dp"
                android:layout_height="100dp"
                app:iconPadding="18dp"
                app:iconSize="22dp"
                app:leftIcon="@drawable/ic_action_save"
                app:leftText="NO"
                app:rightIcon="@drawable/ic_action_warningg"
                app:rightText="YES"
                app:selectedTextSize="14sp"
                app:textSize="12sp"
                android:layout_marginTop="104dp"
                android:layout_below="@+id/toggleButton3"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                app:sliderBackgroundColor="@color/colorPrimaryDark"
                app:switchColor="@color/green"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="50dp"
                android:paddingBottom="20dp"
                android:text="Tsunami"
                android:textAlignment="center"
                android:textColor="#CFD8DC"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView10"
                android:layout_below="@+id/toggleButton2"
                android:layout_marginTop="73dp"
                android:paddingBottom="20dp"
                android:text="Cyclone"
                android:textAlignment="center"
                android:textColor="#CFD8DC"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toggleButton3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                android:paddingBottom="20dp"
                android:text="Flood"
                android:textAlignment="center"
                android:textColor="#CFD8DC"
                android:textSize="18sp"
                android:textStyle="bold" />

            <io.ghyeok.stickyswitch.widget.StickySwitch
                android:layout_width="160dp"
                android:layout_height="100dp"
                app:iconPadding="18dp"
                app:iconSize="22dp"
                app:leftIcon="@drawable/ic_action_save"
                app:leftText="NO"
                app:rightIcon="@drawable/ic_action_warningg"
                app:rightText="YES"
                app:selectedTextSize="15sp"
                app:textSize="12sp"
                android:id="@+id/toggleButton5"
                android:layout_marginTop="105dp"
                android:layout_below="@+id/toggleButton4"
                android:layout_centerHorizontal="true"
                app:sliderBackgroundColor="@color/colorPrimaryDark"
                app:switchColor="@color/green"/>


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toggleButton4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="73dp"
                android:paddingBottom="20dp"
                android:text="Volcano"
                android:textAlignment="center"
                android:textColor="#CFD8DC"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
