<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.Bella.SoilActivity"
    android:background="#212121">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:title="Soil Status">

    </android.support.v7.widget.Toolbar>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/city_name"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/toolbarHeight"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/soil_type"
                android:layout_below="@+id/city_name"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/farm_type"
                android:layout_below="@+id/soil_type"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/crop_type"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/farm_type"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/cover_crop"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/crop_type"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/starts"
                android:layout_below="@+id/cover_crop"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/ends"
                android:layout_below="@+id/starts"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20sp"
                />

</RelativeLayout>
